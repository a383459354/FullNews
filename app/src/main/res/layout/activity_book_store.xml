<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fullnews.ui.activity.BookStoreActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#379be9"
        android:layout_height="50dp">

        <TextView
            android:text="书城"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/classify"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/imageView_book_store_classify" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/seek"
            android:layout_alignTop="@+id/imageView_book_store_classify"
            android:layout_toLeftOf="@+id/imageView_book_store_classify"
            android:layout_toStartOf="@+id/imageView_book_store_classify"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/imageView_book_store_seek" />

    </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout_book_store"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            app:tabTextColor="@color/tab_gray"
            app:tabSelectedTextColor="@color/tab_blue">

        </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_book_store"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
